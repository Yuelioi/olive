{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.ts",
        "src/**/*.vue",
        "server"
    ],
    "exclude": [
        "src/**/__tests__/*"
    ],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "ignoreDeprecations": "5.0",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@/types/*": [
                "src/types/*"
            ]
        }
    }
}